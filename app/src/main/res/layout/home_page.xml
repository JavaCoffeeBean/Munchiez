<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/parent">

 <!--this is start of bottom menu-->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="20dp">

        <RelativeLayout
            android:layout_alignParentStart="true"
            android:id="@+id/home_box"
            android:layout_width="40dp"
            android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/home"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/home_icon"
            android:layout_marginTop="6dp"
            android:layout_marginLeft="5dp"
            android:backgroundTint="@color/grey"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:text="home"
                android:layout_marginTop="27dp"
                android:layout_marginLeft="3dp"
                android:textSize="12sp"
                android:textColor="@color/grey"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/favorites_box"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="65dp"
            android:layout_marginRight="65dp"
            android:layout_toRightOf="@id/home_box">

            <ImageView
                android:id="@+id/favorites"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/heart_icon"
                android:layout_marginTop="6dp"
                android:layout_marginLeft="10dp"
                android:backgroundTint="@color/grey"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:text="Favorites"
                android:layout_marginTop="27dp"
                android:textSize="12sp"
                android:textColor="@color/grey"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/cart_box"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/favorites_box">

            <ImageView
                android:id="@+id/cart"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/cart_icon"
                android:layout_marginTop="6dp"
                android:layout_marginLeft="5dp"
                android:backgroundTint="@color/grey"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:layout_marginLeft="6dp"
                android:layout_marginTop="27dp"
                android:text="home"
                android:textColor="@color/grey"
                android:textSize="12sp" />



        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/options_box"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="45dp"
            android:layout_alignParentEnd="true">

            <ImageView
                android:id="@+id/options"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/options_icon"
                android:layout_marginTop="6dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="2dp"
                android:backgroundTint="@color/grey"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:text="home"
                android:layout_marginTop="27dp"
                android:layout_marginLeft="3dp"
                android:textSize="12sp"
                android:textColor="@color/grey"/>

        </RelativeLayout>

        </RelativeLayout>


    </RelativeLayout>
<!--This is the end of the bottom menu-->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/home_image"
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:background="@drawable/hero_image"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="470dp"
            android:layout_alignTop="@id/home_image"
            android:layout_marginTop="210dp"
            android:padding="25dp">

        </androidx.recyclerview.widget.RecyclerView>


    </RelativeLayout>

    </ScrollView>


    <EditText
        android:layout_width="350dp"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:hint="    Search Recipes"
        android:layout_marginTop="10dp"
        android:background="@drawable/search_shape"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"/>

</RelativeLayout>