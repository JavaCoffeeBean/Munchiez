<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="110dp"
    android:background="@drawable/recyclerview_shape"
    android:id="@+id/parent_layout1"
    android:layout_marginBottom="30dp"
    android:layout_centerHorizontal="true">

    <ImageView
        android:id="@+id/recipe_image"
        android:layout_width="109dp"
        android:layout_height="match_parent"
        android:src="@drawable/sushi"
        android:background="@drawable/recyclerview_shape" />

    <TextView
        android:id="@+id/recipe_name"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:text="Sushi"
        android:layout_toRightOf="@id/recipe_image"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:layout_marginLeft="10dp"
        android:fontFamily="sans-serif-light"/>

    <ImageButton
        android:layout_marginBottom="10dp"
        android:id="@+id/favorite_button"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignBottom="@id/recipe_image"
        android:background="@drawable/heart_icon"
        android:layout_toEndOf="@id/recipe_name"
        android:backgroundTint="@color/grey"/>

    <ImageButton
        android:layout_marginTop="10dp"
        android:id="@+id/cart_button"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/cart_icon"
        android:layout_toRightOf="@id/recipe_name"
        android:backgroundTint="@color/grey"/>

    <RelativeLayout
        android:layout_marginRight="20dp"
        android:id="@+id/filer_layout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toRightOf="@id/favorite_button"/>

</RelativeLayout>